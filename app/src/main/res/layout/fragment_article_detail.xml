<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".ui.article.articledetail.ArticleDetailFragment">
<ImageView
    android:id="@+id/mediaImage"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
<TextView
    android:id="@+id/articleAbstract"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/mediaImage"
    app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/articleAbstract"
        />
    <TextView
        android:id="@+id/publishedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/articleTitle"
        app:drawableStartCompat="@drawable/ic_date" />
    <TextView
        android:id="@+id/updatedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/publishedDate"
        app:drawableStartCompat="@drawable/ic_date" />
</androidx.constraintlayout.widget.ConstraintLayout>